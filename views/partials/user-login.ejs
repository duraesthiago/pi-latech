<!-- Include Header -->
<%- include('partials/header', {title: 'Início' }) %>
  <main>
    <link rel="stylesheet" href="/stylesheets/user-login.css">
    <div class="container-login">
      <div class="login-page">
        <div class="tittle-login">Login</div>
        <div class="login-main-container">
          <div class="left-container">
            <div class="signupbox">
              <div class="loginboxtittle">Quero criar uma conta</div>
              <form class="login-box-form" action="" method="POST">
                <div class="form-group">
                  <label class="form-label" for="email">E-mail:</label>
                  <input class="imput-label" type="text" id="email" name="email" placeholder="Digite seu e-mail"
                    value="">
                </div>
                <button class="loginFormButton">
                  <span>Criar minha conta</span>
                </button>
              </form>
            </div>
          </div>
          <div class="right-container">
            <div class="signupbox">
              <div class="loginboxtittle">Já sou cliente</div>
              <form class="login-box-form" action="" method="POST">
                <div class="form-group">
                  <label class="form-label" for="email">E-mail:</label>
                  <input class="imput-label" type="text" id="email" name="email" placeholder="Digite seu e-mail"
                    class="form-input" value="">
                </div>
                <div class="form-group">
                  <label class="form-label" for="password" class="form-label">Senha:</label>
                  <input class="imput-label" type="password" id="password" name="password" placeholder="" value="">
                </div>
                <button class="loginFormButton">
                  <span>Entrar</span>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <!-- Include Footer -->
  <%- include('partials/footer') %>
    </body>

    </html>